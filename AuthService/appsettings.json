{
  "IdentityServer": {
    "Clients": [
      {
        "ClientId": "vehicle-service",
        "ClientSecret": "secret",
        "AllowedGrantTypes": [
          "authorization_code"
        ],
        "RedirectUris": [
          "https://localhost:7165/swagger/oauth2-redirect.html"
        ],
        "PostLogoutRedirectUris": [
          "https://localhost:7165/swagger/"
        ],
        "AllowedCorsOrigins": [
          "https://localhost:7165"
        ],
        "AllowedScopes": [
          "read",
          "write",
          "openid",
          "profile"
        ],
        "AllowAccessTokensViaBrowser": true,
        "AlwaysSendClientClaims": true,
        "AlwaysIncludeUserClaimsInIdToken": true,
        "AccessTokenType": "Jwt",
        "RequireConsent": false,
        "RequirePkce": true,
        "RequireClientSecret": false
      }
    ],
    "Scopes": [
      {
        "Name": "read",
        "DisplayName": "Read Access"
      },
      {
        "Name": "write",
        "DisplayName": "Write Access"
      },
      {
        "Name": "openid",
        "DisplayName": "Open ID Client"
      },
      {
        "Name": "profile",
        "DisplayName": "Profile Client"
      }
    ],
    "Resources": [
      {
        "Name": "vehicle.resource",
        "DisplayName": null,
        "Scopes": [
          "read",
          "write"
        ],
        "Claims": [
          "role",
          "permission"
        ]
      },
      {
        "Name": "openid",
        "DisplayName": null,
        "Scopes": [
          "openid"
        ],
        "Claims": [
          "email",
          "phone",
          "profile"
        ]
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Port=5432;Database=identity_server;User Id=postgres;Password=123;"
  }
